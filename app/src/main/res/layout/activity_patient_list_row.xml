<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/getInsideParticularPatient">

            <TextView
                android:id="@+id/PatientNameInList"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="8"
                android:inputType="textPersonName"
                android:text="Sahil Sharma"
                android:textSize="25sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/correct"
                android:layout_gravity="center|bottom"
                android:id="@+id/verified"/>

            <ImageView
                android:id="@+id/nextt"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:src="@drawable/next"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eddDateOfPatientInList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="EDD: 12/03/19"
                android:textSize="15sp" />

            <!--<TextView-->
            <!--android:id="@+id/TextView18"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="left"-->
            <!--android:text="DOB : 28 Aug 2017"-->
            <!--android:textSize="15sp" />-->


        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/patientBpChartInListItem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="3dp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
