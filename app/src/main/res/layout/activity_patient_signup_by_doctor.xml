<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colortheme"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName">

            </EditText>


            <EditText
                android:id="@+id/editaddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colortheme"
                android:ems="10"
                android:hint="@string/address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editUHID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colortheme"
                android:ems="10"
                android:hint="@string/UHID_or_reg.no"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colortheme"
                android:ems="10"
                android:hint="@string/age_not_years"
                android:inputType="number" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:backgroundTint="@color/colortheme"
                    android:gravity="center"
                    android:text="+91 -" />

                <EditText
                    android:id="@+id/editphone"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="5"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:paddingLeft="10dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:backgroundTint="@color/colortheme"
                    android:gravity="center"
                    android:text="@string/last_mesntural_period" />

                <EditText
                    android:id="@+id/lmpDate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="5"
                    android:hint="dd/mm/yyyy"
                    android:backgroundTint="@color/colortheme"
                    android:focusable="false"
                    android:inputType="none" />


            </LinearLayout>

                <EditText
                    android:id="@+id/editemail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:ems="10"
                    android:backgroundTint="@color/colortheme"
                    android:hint="@string/email_optional"
                    android:inputType="textEmailAddress" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/some_extra_details_optional" />

                    <CheckBox
                        android:id="@+id/highbp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/history_of_high_blood_pressure_prior_to_pregnancy" />

                    <CheckBox
                        android:id="@+id/histPree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/a_history_of_preeclampsia" />

                    <CheckBox
                        android:id="@+id/motherPre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/having_a_mother_or_sister_who_had_preeclampsia" />

                    <CheckBox
                        android:id="@+id/histObes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/a_history_of_obesity" />

                    <CheckBox
                        android:id="@+id/moreThanOneBaby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/carrying_more_than_one_baby" />

                    <CheckBox
                        android:id="@+id/diseases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/history_of_diabetes_kidney_disease_lupus_or_rheumatoid_arthritis" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/normalDoc">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button

                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_btn"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>